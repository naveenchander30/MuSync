# Base URL of the authentication service
# Using remote Render deployment
MUSYNC_AUTH_SERVER=https://musync-k60r.onrender.com

# Spotify OAuth credentials
# Get these from https://developer.spotify.com/dashboard
CLIENT_ID=your_spotify_client_id_here
CLIENT_SECRET=your_spotify_client_secret_here

# Auth server public URL (used for OAuth redirects)
# Using remote Render deployment
AUTH_BASE_URL=https://musync-k60r.onrender.com

# Google / YouTube Music OAuth config file
# Path to the OAuth client secrets JSON file from Google Cloud Console
# Get this from https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_FILE=credentials.json
